<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="confusedgriffinproductions.dudesinadungeon.CharacterListFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/character_list_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="4"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="left|center_vertical"
            android:text="@string/nav_view_char"
            android:textAlignment="textStart"
            android:textColor="@color/textColorPrimaryInverse"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/create_a_character"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/ic_add_circle_black_24dp"
            android:elevation="10dp"
            android:padding="10dp"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/textColorPrimaryInverse" />

    <ListView
        android:id="@+id/character_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/textColorPrimaryInverse" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        android:layout_weight="5"
        android:gravity="bottom|center_horizontal"
        android:text="@string/all_rights_reserved"
        android:textAlignment="center"
        android:textColor="@color/textColorSecondaryInverse"
        android:textSize="12sp" />

</LinearLayout>
