                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/agility_field"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    tools:ignore="DuplicateIds,HardcodedText,LabelFor"
                    android:text="10"
                    android:textSize="16sp" />

                <Button
                    android:text="-"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtract_agility_button"
                    android:layout_weight="1.6"
                    android:layout_gravity="center_vertical"
                    tools:ignore="HardcodedText" />

                <Button
                    android:text="+"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_agility_button"
                    android:layout_weight="1.6"
                    android:layout_gravity="center_vertical"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/attribute_three">
                <TextView
                    android:text="@string/resilience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/resilience_label"
                    android:layout_weight="1.25"
                    android:textSize="16sp"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_vertical"
                    tools:ignore="DuplicateIds" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/resilience_field"
