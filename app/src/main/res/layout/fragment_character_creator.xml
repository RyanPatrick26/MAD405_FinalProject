                    android:textSize="12sp"
                    android:layout_row="3" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="3"
                    android:layout_column="8"
                    android:layout_columnSpan="2">

                    <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subtract_sneaking"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_sneaking"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        tools:ignore="ButtonStyle,HardcodedText" />
                </LinearLayout>

                <TextView
                    android:text="@string/crafting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/crafting_field"
                    android:layout_columnSpan="2"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:textColor="@android:color/background_dark" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="1"
                    android:id="@+id/crafting_label"
                    android:layout_column="2"
                    android:text="0"
                    android:textAlignment="center"
                    android:layout_columnSpan="1"
                    tools:ignore="HardcodedText,LabelFor"
                    android:textSize="12sp"
                    android:layout_row="4" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="4"
                    android:layout_column="3"
                    android:layout_columnSpan="2">

                    <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subtract_crafting"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_crafting"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        tools:ignore="ButtonStyle,HardcodedText" />
                </LinearLayout>

                <TextView
                    android:text="@string/survival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/survival_label"
                    android:layout_column="5"
                    android:layout_columnSpan="2"
                    tools:ignore="HardcodedText"
                    android:layout_row="4"
                    android:textColor="@android:color/background_dark" /> /

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="1"
                    android:id="@+id/survival_field"
                    android:layout_column="7"
                    android:text="0"
                    android:textAlignment="center"
                    android:layout_columnSpan="1"
                    tools:ignore="DuplicateIds,HardcodedText,LabelFor"
                    android:textSize="12sp"
                    android:layout_row="4" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="4"
                    android:layout_column="8"
                    android:layout_columnSpan="2">

                    <Button
                        android:text="-"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subtract_survival"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:text="+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_survival"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        tools:ignore="ButtonStyle,HardcodedText" />
                </LinearLayout>

            </GridLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/remaing_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/remaining_skill_label"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:text="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/remaining_skill_field"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/background_dark" />

                <Button
                    android:text="@string/reset_skills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reset_button"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80dp"
                    android:textSize="12sp" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/item_list"
                tools:ignore="NestedScrolling" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spell_list"
                tools:ignore="NestedScrolling" />

            <Button
                android:text="@string/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_button"
                tools:ignore="HardcodedText"
                android:layout_gravity="right"
                android:layout_margin="15dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
