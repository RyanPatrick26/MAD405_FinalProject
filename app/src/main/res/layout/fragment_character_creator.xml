<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="confusedgriffinproductions.dudesinadungeon.CharacterCreatorFragment"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:id="@+id/title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="10dp"
                android:text="@string/charcacter_creator"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/name_layout">

                <TextView
                    android:text="@string/character_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_text_view"
                    android:textSize="14sp"
                    android:textColor="@android:color/background_dark"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/name_field"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    tools:ignore="LabelFor"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/race_and_class">

                <TextView
                    android:text="@string/race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/race_text_view"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_dark" />

                <Spinner
                    android:id="@+id/race_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/class_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/character_class"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:text="@string/attributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/attributes_view"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@android:color/background_dark"
                tools:ignore="HardcodedText"
                android:padding="5dp" />

            <LinearLayout
