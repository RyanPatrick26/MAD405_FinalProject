                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="1.6"
                    android:text="+"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </LinearLayout>

            <LinearLayout
