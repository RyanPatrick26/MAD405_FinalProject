<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="confusedgriffinproductions.dudesinadungeon.CharacterCreatorFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text="@string/gambling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gambling_label"
        android:layout_column="5"
        android:layout_columnSpan="2"
        tools:ignore="HardcodedText"
        android:layout_row="0"
        android:textColor="@android:color/background_dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:text="@string/charcacter_creator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_view"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@android:color/background_dark"
                android:padding="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/name_layout">

                <TextView
                    android:text="@string/character_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_text_view"
                    android:textSize="14sp"
                    android:textColor="@android:color/background_dark"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/name_field"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    tools:ignore="LabelFor"
                    android:textSize="14sp" />

                <Button
                    android:text="@string/randomize_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/random_name"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/attributes_view"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:text="@string/attributes"
                android:textColor="@android:color/background_dark"
                tools:ignore="HardcodedText"
                android:padding="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/race_and_class">

                <TextView
                    android:text="@string/race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/race_text_view"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_dark" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_text_view"
                    android:layout_weight="1" />

                <TextView
                    android:text="@string/character_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/background_dark" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/attribute_one">

                <TextView
                    android:text="@string/strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/strength_label"
                    android:layout_weight="1.25"
                    android:textSize="16sp"
                    android:textColor="@android:color/background_dark"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/strength_field"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    tools:ignore="HardcodedText,LabelFor"
                    android:text="10"
                    android:textSize="16sp" />

                <Button
                    android:text="-"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtract_strength_buton"
                    android:layout_weight="1.6"
                    android:layout_gravity="center_vertical"
                    tools:ignore="HardcodedText" />

                <Button
                    android:text="+"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_strength_button"
                    android:layout_weight="1.6"
                    android:layout_gravity="center_vertical"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
